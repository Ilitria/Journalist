@{
    ViewData["Title"] = "Конкурс журналистики";
}

@await Html.PartialAsync("HeaderPartial")
@await Html.PartialAsync("IntroPartial")

<selection class="content">
    <div class="wrapper">
        <div class="content__wrap" id="1">
            <div class="content__title">
                <h2 class="content__title-text">Этапы проведения</h2>
                <div class="content__line"></div>
            </div>
            <div class="content__content_wrap">
                <div class="content__info">
                    <div class="content__step">
                        <p class="content__date">Ожидаем запуск
                                              <br>15 - 31 октября</p>
                    </div>
                    <div class="content__step">
                        <p class="content__date">Принимает заявки
                                              <br>1 - 31 ноября</p>
                    </div>
                    <div class="content__step">
                        <p class="content__date">Независимая экспертиза
                                              <br>1 - 14 декабря</p>
                    </div>
                    <div class="content__step">
                        <p class="content__date">Завершение конкурса
                                              <br>15 декабря</p>
                    </div>
                </div>
                <div>
                    <img src="~/images/Этапы.png" alt="Этапы" class="content__img">
                </div>
            </div>
        </div>

        <div class="content__wrap" id="2">
            <div class="content__title application">
                <h2 class="content__title-text">Подача заявки</h2>
                <div class="content__line application"></div>
            </div>
            <div class="content__content_wrap">
                <div>
                    <img src="~/images/Заявка.png" alt="Этапы" class="content__img">
                </div>
                <div class="content__info">
                    <p class="content__text">Регистрация на конкурс журналистики Оренбургской области  в самом разгаре! Подай заявку и поборись за приз, участие бесплатно! До старта осталось 9 дней!</p>
                    <input type="button" class="content__button" value="Подать заявку">
                </div>
            </div>
        </div>

        <div class="content__wrap" id="3">
            <div class="content__title contacts">
                <h2 class="content__title-text">Контакты</h2>
                <div class="content__line contacts"></div>
            </div>
            <div class="content__content_wrap">
                <div class="content_info contact__block">
                    <p class="content__contact">Россия, 460014, <br> 
                                    г. Оренбург, <br>
                                    ул. Кобозева, 1 <br>
                                    +7 (3532) 78-62-42 <br>
                                    office46@mail.orb.ru <br>
                                    digital.orb.ru
                </div>
                <div>
                    <img src="~/images/Контакты.png" alt="Этапы" class="content__img">
                </div>
                <div class="content__info contact__block">
                    <p class="content__contact contact">Телефон: <br>
                                    +7 (932) 371-37-22 <br>
                                    E-mail: <br>
                                    example@gmail.com <br>
                                    Соцсети:</p>
                    <div class="contact__wrappersocial">
                        <a href="#!" target="_blank" class="contact__social-link">
                            <img src="~/images/svg/Telegram.svg" alt="Telegram" class="contact__telegram">
                        </a>
                        <a href="#!" target="_blank" class="contact__social-link">
                            <img src="~/images/svg/VK.svg" alt="VK" class="contact__viber">
                        </a>
                        <a href="https://vk.com/firsthackaton" target="_blank" class="contact__social-link">
                            <img src="~/images/svg/Whatsup.svg" alt="Wharsup" class="contact__VK">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</selection>



